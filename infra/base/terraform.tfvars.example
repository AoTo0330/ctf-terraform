# CTF Terraform Variables - Example
project_id     = "your-gcp-project-id"
region         = "asia-northeast1"
zone           = "asia-northeast1-a"

# 許可するIPアドレス（現在のIPアドレス）
allowed_ip1    = "YOUR_IP_ADDRESS/32"
allowed_ip2    = "YOUR_IP_ADDRESS/32"

# サービスアカウント（実際の値に基づく）
sa_email       = "your-service-account@your-project.iam.gserviceaccount.com"

# Datadog APIキー（実際の値に置き換える必要があります）
dd_api_key     = "your-datadog-api-key"

# GKE設定
gke_node_type       = "e2-medium"
gke_release_channel = "REGULAR"

# その他の設定
machine_type = "e2-standard-2"
zones        = "asia-northeast1-a,asia-northeast1-b,asia-northeast1-c" 

# Cloud SQL CTFD設定
ctfd_instance_name = "ctfd-japan"
ctfd_database_user = "ctfduser"
ctfd_database_name = "ctfd"

# 機密情報（実際の値に置き換えてください）
ctfd_user_password = "CHANGE_ME_TO_SECURE_PASSWORD"
ctfd_secret_key = "CHANGE_ME_TO_SECRET_KEY" 